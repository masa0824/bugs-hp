<div class="box_menu">
<% if logged_in? %>
	<div class="msgbox_out menu_mode">
		<div class="msgbox_in menu_mode">
			<h2>【ストーリーモード】</h2>
			<button class="submit_battle" id="story_battle">バトル！</button>
		</div>
	</div>
	<div class="msgbox_out menu_mode">
		<div class="msgbox_in menu_mode">
			<h2>【セレクトモード】</h2>
			<%= form_with do |form| %>
				Stage:<span id="form_select_stage"></span><br />
				Step:<span id="form_select_step"></span><br />
				<%= form.hidden_field :gamemode, :value => 'select' %>
				<%= form.submit 'バトル！', :class => 'submit_battle', :id => 'select_battle' %>
			<% end %>
		</div>
	</div>
	<div class="msgbox_out menu_mode">
		<div class="msgbox_in menu_mode">
			<h2>【エキストラモード】</h2>
			<%= form_with do |form| %>
				カテゴリ:<span id="form_extra_category"><%= form.select :extra_category, @questExtra_categories, { prompt: '選んでください' } %></span><br />
				タイトル:<span id="form_extra_title"><%= form.select :extra_title, [['カテゴリを選んで下さい', '']] %></span><br />
				<%= form.hidden_field :gamemode, :value => 'extra' %>
				<%= form.hidden_field :referrer, :value => 'menu' %>
				<%= form.submit 'バトル！', :class => 'submit_battle', :id => 'extra_battle' %>
			<% end %>
		</div>
	</div>
	<div class="msgbox_out menu_mode">
		<div class="msgbox_in menu_mode">
			<h2>【サバイバルモード】</h2>
			※後日公開予定
		</div>
	</div>
<% end %>
	<div class="msgbox_out menu1">
		<div class="msgbox_in menu1">
			<table class="user_status">
				<tr>
					<td>
						名前：
					</td>
					<td>
						<span id="user_name"><%= @get_bugsquest_game_data[:questUser].name %></span>
					</td>
				</tr>
				<tr>
					<td>
						レベル：
					</td>
					<td>
						<%= @get_bugsquest_game_data[:questUser].lv %>
					</td>
				</tr>
				<tr>
					<td>
						経験値：
					</td>
					<td>
						<%= @get_bugsquest_game_data[:questUser].exp %>
					</td>
				</tr>
				<tr>
					<td>
						次のレベル<br />までの経験値：
					</td>
					<td>
						<%= raw @get_bugsquest_game_data[:next_lvup_exp] %>
					</td>
				</tr>
				<tr>
					<td>
						STEP：
					</td>
					<td>
						<span id="user_step"><%= @get_bugsquest_game_data[:questQuiz].id %></span>
					</td>
				</tr>
				<tr>
					<td>
						STAGE<span id="user_stage_num"><%= @get_bugsquest_game_data[:questStage].num %></span>：
					</td>
					<td>
						<span id="user_stage_name"><%= @get_bugsquest_game_data[:questStage].name %></span>
					</td>
				</tr>
			</table>
		</div>
	</div>

	<div class="msgbox_out menu2">
		<div class="msgbox_in menu2">
			<table class="user_status">
				<tr>
				<td>
					ちから：
				</td>
				<td>
					<%= @get_bugsquest_game_data[:questStatus].power %>
				</td>
			</tr>

			<tr>
				<td>
					みのまもり：
				</td>
				<td>
					<%= @get_bugsquest_game_data[:questStatus].protect %>
				</td>
			</tr>
			<tr>
				<td>
					すばやさ：
				</td>
				<td>
					<%= @get_bugsquest_game_data[:questStatus].speed %>
				</td>
			</tr>
			<tr>
				<td>
					かしこさ：
				</td>
				<td>
					<%= @get_bugsquest_game_data[:questStatus].wise %>
				</td>
			</tr>
			<tr>
				<td>
					うんのよさ：
				</td>
				<td>
					<%= @get_bugsquest_game_data[:questStatus].luck %>
				</td>
			</tr>
			</table>
		</div>
	</div>
</div>