<div id="login_forms">
  <div class="contents-wrapp">
    <div class="page_name">
      <h2>＜Bugs＞アカウント登録</h2>
    </div>
    <%= form_for(@user) do |f| %>
      <div class="input-form">
        <%= f.text_field :name, :placeholder => 'ユーザー名', :class => 'input-field', :maxlength => 255 %>
        <%= f.email_field :email, :placeholder => 'メールアドレス', :class => 'input-field', :maxlength => 255 %>
        <%= f.password_field :password, :placeholder => 'パスワード(8文字以上16文字以下)', :class => 'input-field', :maxlength => 255 %>

        <div class="radio_btn_area">
          <label><%= f.radio_button :corporation, 1 %>個人</label>
          <label><%= f.radio_button :corporation, 2 %>個人事業主</label>
          <label><%= f.radio_button :corporation, 3, {required: true}  %>法人</label>
        </div>

        <span id="corporation_name"><%= f.text_field :corporation_name, :placeholder => '法人名', :class => 'input-field', :maxlength => 255 %></span>

        <span><%= check_box_tag :check_rule, 0, checked=false, {required: true} %> <a id="open_rule">利用規約</a>に同意します</span>
        
        <%= f.submit "登録", :class => 'btn create-btn' %>

        <p class="link-p">アカウントをお持ちの方はこちらから</p>
        <%= link_to "ログイン", login_path, :class => 'link' %>
        
        <p class="link-p">ゲーム画面へ</p>
        <%= link_to "ゲーム一覧", login_confirm_path, :class => 'link' %>
      </div>
    <% end %>
  </div>
</div>