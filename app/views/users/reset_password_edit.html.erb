<div id="login_forms">
  <div class="contents-wrapp">
    <div class="page_name">
      <h2>パスワード再発行</h2>
    </div>
      <%= form_for(@user, url: reset_password_update_path) do |f| %>
        <div class="input-form">
          <%= f.password_field :password, :placeholder => '新しいパスワード', :class => 'input-field', :maxlength => 255 %>
          <%= f.submit "パスワード変更", :class => 'btn create-btn' %>
        </div>
        <%= hidden_field_tag :email, @user.email %>
        <%= hidden_field_tag :token, params[:token] %>
      <% end %>
  </div>
</div>